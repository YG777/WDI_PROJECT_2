<h1>Wine List</h1>

<form method="POST" action="/wines/<%= wine.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="product">Wine name</label>
    <input type="text" name="product" id="product" placeholder="wine name" class="form-control" value="<%= wine.product %>">
  </div>
  <div class="form-group">
    <label for="winery">Winery</label>
    <input type="text" name="winery" id="winery" class="form-control" value="<%= wine.vinery %>">
  </div>
  <div class="form-group">
    <label for="description">Tasting Notes</label>
    <textarea name="description" id="description" placeholder="tasting notes" class="form-control"><%= film.synopsis %></textarea>
  </div>
  
