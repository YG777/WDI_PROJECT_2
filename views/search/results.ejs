<div class="container-fluid" id="wines">  
<h1>Search Results</h1>  
                           
    <div class="container-fluid">
    <% if(wines.length > 0){ %>
       <div class="row" id="#holdstuff"> <% wines.forEach(function(wine){ %>
              <div class="card-deck">
                    <div class="card" id="winecard">
                     <img class="card-img-top" src="<%= wine.ImgLink %>" alt="<%= wine.Name %>">

                        <div class="card-block">  
                            <a href="/wines/<%= wine.Id %>">
                            <h5 class="card-title"><%= wine.Name %></h5></a>
                             <p class="card-text"><%= wine.Vineyard %></p> 
                              <p class="card-text"><%= wine.Vintage %></p> 
                         </div>
                              <form action="/list" method="post">
                                 <input type="hidden" name="wineId" value="<%= wine.Id %>"/>
                                <button>Add to my list</button>
                            </form>
                       
                      </div> 
                </div>
                  <% }); %>
            <% } else{ %>
            <div class="not-found">
              <p>No matching results, try again</p>
               <a href="#" onclick="history.back();">Back</a>
               </div>
              <% } %>
           </div>
      </div> 
</div>
    

